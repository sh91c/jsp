<script>
	$( function(){
		getAddr('', 1, 'sido');
		
		$('#sido').change( function(){
			$('#gugun').html('');
			$('#dong').html('');
			$('#dong2').html('');
			getAddr($('#addr1').val(), 2, 'gugun');
			
		});
		
		$('#gugun').change( function(){
			$('#dong').html('');
			$('#dong2').html('');
			getAddr($('#addr2').val(), 3, 'dong');
		});
		
		$('#dong').change( function(){
			$('#dong2').html('');
			getAddr($('#addr3').val(), 4, 'dong2');
		 $('#addr1').val(<%=strComIDs[0]%>);
		});
		
	});
</script>
